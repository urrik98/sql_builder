<div class="container">
  <div class="row">
    <h3 class="text-center"><%= link_to @table.database.name, database_path(@table.database.id) %>.<%= link_to @table.name, database_table_path(@table.database.id, @table.id) %></h3>
  </div>
  <br>
  <div class="row">
    <h5 class="text-center"><%= link_to "Add a column", new_database_table_column_path(@database.id, @table.id), :class => "btn btn-danger btn-sm" %></h5>
  </div>
  <br>
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <table class="table">
        <thead>
          <th>Column</th>
          <th>datatype</th>
        </thead>
        <tbody>
          <% @columns.each do |c|  %>
            <tr>
              <td><%= c.name %></td>
              <td><%= c.datatype %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
  </div>

</div>
