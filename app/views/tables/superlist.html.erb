<div class="container">
  <div class="row">
    <h3 class="text-center">Tables</h3>
  </div>
  <br>
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <table class="table table-hover table-sm">
        <thead class="thead-inverse">
          <th>Table name</th>
          <th>Database</th>
        </thead>
        <tbody>
          <% @tables.each do |t| %>
            <tr>
              <td><%= t.name %></td>
              <td><%= link_to t.database.name, database_path(t.database.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
